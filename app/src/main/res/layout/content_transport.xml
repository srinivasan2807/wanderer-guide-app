<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.my.travel.wanderer.activity.detail.TransportActivity"
    tools:showIn="@layout/activity_transport">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rlBottomMenu"
        android:layout_below="@+id/topbarView"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTransportContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:autoLink="all"
                android:padding="@dimen/margin_large"
                android:textColor="@color/colorContent"
                android:lineSpacingExtra="9dp"
                android:layout_marginBottom="50dp"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>

</androidx.core.widget.NestedScrollView>
