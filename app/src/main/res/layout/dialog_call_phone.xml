<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_holder">

    <LinearLayout
        style="@style/dialog_background"
        android:background="@drawable/bg_circle_thin_solid_white_radian20"
        android:paddingLeft="@dimen/margin_large"
        android:paddingRight="@dimen/margin_large">

        <TextView
            android:id="@+id/dialogTitle"
            style="@style/dialog_title"
            android:text="Tip for Place"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rlView1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:visibility="visible">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:textColor="@color/colorBlue500"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:visibility="gone">

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:textColor="@color/colorBlue500"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"

                android:layout_alignParentTop="true"
                android:background="@color/colorLine" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlView3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:visibility="gone">

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:textColor="@color/colorBlue500"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentTop="true"
                android:background="@color/colorLine" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlView4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:visibility="gone">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:textColor="@color/colorBlue500"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentTop="true"
                android:background="@color/colorLine" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonOke"
                style="@style/dialog_button"
                android:background="@color/transparent"
                android:text="Close"
                android:textColor="@color/colorContent" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>