<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/tvMenuInfomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:textSize="16dp"
        android:text="Information"
        android:textColor="@color/colorGrey300" />

    <LinearLayout
        android:id="@+id/menuInfo1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_menu_height">

        <ImageView
            android:layout_width="@dimen/nav_item_menu_thumb"
            android:layout_height="@dimen/nav_item_menu_thumb"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_about" />

        <TextView
            android:id="@+id/tvMenu1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_medium"
            android:gravity="center_vertical|left"
            android:text="@string/info_1"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_item_menu_title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuInfo2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_menu_height">

        <ImageView
            android:layout_width="@dimen/nav_item_menu_thumb"
            android:layout_height="@dimen/nav_item_menu_thumb"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_privacy" />

        <TextView
            android:id="@+id/tvMenu2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_medium"
            android:gravity="center_vertical|left"
            android:text="@string/info_2"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_item_menu_title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuInfo3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_menu_height">

        <ImageView
            android:layout_width="@dimen/nav_item_menu_thumb"
            android:layout_height="@dimen/nav_item_menu_thumb"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_feedback" />

        <TextView
            android:id="@+id/tvMenu3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_medium"
            android:gravity="center_vertical|left"
            android:text="@string/info_3"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_item_menu_title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuInfo4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_menu_height">

        <ImageView
            android:layout_width="@dimen/nav_item_menu_thumb"
            android:layout_height="@dimen/nav_item_menu_thumb"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_review" />

        <TextView
            android:id="@+id/tvMenu4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_medium"
            android:gravity="center_vertical|left"
            android:text="@string/info_4"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_item_menu_title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuInfo5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_item_menu_height">

        <ImageView
            android:layout_width="@dimen/nav_item_menu_thumb"
            android:layout_height="@dimen/nav_item_menu_thumb"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_profile" />

        <TextView
            android:id="@+id/tvMenu5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_medium"
            android:gravity="center_vertical|left"
            android:text="Log Out"
            android:textColor="@color/white"
            android:textSize="@dimen/nav_item_menu_title" />

    </LinearLayout>
</LinearLayout>
