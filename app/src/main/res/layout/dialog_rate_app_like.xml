<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_holder">

    <LinearLayout style="@style/dialog_background">

        <ImageView
            android:id="@+id/imvIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ico_smile_3x" />

        <TextView
            android:id="@+id/dialogMessage"
            style="@style/dialog_message"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:paddingLeft="@dimen/margin_large"
            android:paddingRight="@dimen/margin_large"
            android:text="Are you enjoying Bpacking app?"
            android:textColor="@color/colorGrey600"
            android:textSize="16dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGrey500" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNo"
                style="@style/dialog_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="Nah"
                android:textColor="@color/colorGrey500" />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorGrey500" />


            <Button
                android:id="@+id/buttonRate"
                style="@style/dialog_button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="Yeah"
                android:textColor="@color/colorBlue500" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>